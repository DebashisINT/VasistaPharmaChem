<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0F5FB"
    android:orientation="vertical"
    tools:context=".features.mylearning.MyLearningFragment">

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:background="@drawable/back_round_corner_8"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:background="@drawable/search_"
            android:backgroundTint="@color/search_layover_bg"
            android:layout_gravity="center"/>

            <com.breezevasista.widgets.AppCustomEditText
                android:id="@+id/et_frag_contacts_search"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="Search here"
                android:textColorHint="#A1A1A1"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:singleLine="true"
                android:paddingLeft="@dimen/_10sdp" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/google_voice"
            android:layout_marginEnd="@dimen/_10sdp"
            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_lms_learner_space"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                app:cardBackgroundColor="@color/transparent"
                android:layout_margin="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_15sdp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/idIVImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_170sdp"
                        android:background="@drawable/newlearner"
                        />

                    <ImageView
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_gravity="center|start"
                        android:src="@drawable/learner_space_icon"
                        android:textColor="@color/white"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_20sdp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:text="Learner Space"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:visibility="visible"
                        android:orientation="horizontal"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_gravity="right|top"
                        android:layout_width="@dimen/_88sdp"
                        android:layout_height="@dimen/_31sdp"
                        android:background="@drawable/back_round_corner_capsul"
                        android:layout_marginEnd="@dimen/_7sdp">

                        <ImageView
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_22sdp"
                            android:layout_height="match_parent"
                            android:src="@drawable/folder_icon"
                            >

                        </ImageView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            >

                            <TextView
                                android:id="@+id/tv_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|start"
                                android:text="1000\nContents"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp"
                                />

                           <!-- <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contents"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/white"

                                />-->

                        </LinearLayout>


                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_132sdp"

                    >

                    <LinearLayout
                        android:id="@+id/ll_frag_search_mylearning_root"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_132sdp"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_132sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:elevation="@dimen/_10sdp"
                            android:defaultFocusHighlightEnabled="true">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_132sdp"
                                android:src="@drawable/mylearningbg_n"
                                android:scaleType="fitXY"
                                />

                            <LinearLayout
                                android:visibility="visible"
                                android:orientation="horizontal"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_gravity="right|top"
                                android:layout_width="@dimen/_74sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:background="@drawable/back_round_corner_capsul"
                                android:layout_marginEnd="@dimen/_7sdp">

                                <ImageView
                                    android:layout_marginStart="@dimen/_7sdp"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/folder_icon"
                                    >

                                </ImageView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    >

                                    <TextView
                                        android:id="@+id/tv_content_learning"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|start"
                                        android:text="1000\nContents"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_9sdp"
                                        />

                                    <!-- <TextView
                                         android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:text="Contents"
                                         android:textSize="@dimen/_11sdp"
                                         android:textColor="@color/white"

                                         />-->

                                </LinearLayout>


                            </LinearLayout>

                            <FrameLayout
                                android:layout_gravity="bottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_marginStart="@dimen/_12sdp"
                                    android:text="My Learning"
                                    android:layout_gravity="start|bottom"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_10sdp"/>

                                <LinearLayout
                                    android:visibility="gone"
                                    android:orientation="horizontal"
                                    android:layout_marginStart="@dimen/_12sdp"
                                    android:layout_marginTop="@dimen/_12sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:layout_gravity="start|bottom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:layout_gravity="center"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:src="@drawable/count_play_icon">

                                    </ImageView>

                                    <TextView
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:text="1000"
                                        android:layout_gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        />
                                </LinearLayout>

                            </FrameLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_frag_search_knowledge_hub_root"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_132sdp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_132sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            android:elevation="@dimen/_10sdp"
                            android:defaultFocusHighlightEnabled="true">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_132sdp"
                                android:src="@drawable/knowledgehubbg_"
                                android:scaleType="fitXY"
                                />

                            <LinearLayout
                                android:visibility="visible"
                                android:orientation="horizontal"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_gravity="right|top"
                                android:layout_width="@dimen/_74sdp"
                                android:layout_height="@dimen/_28sdp"
                                android:background="@drawable/back_round_corner_capsul"
                                android:layout_marginEnd="@dimen/_7sdp">

                                <ImageView
                                    android:layout_marginStart="@dimen/_7sdp"
                                    android:layout_gravity="center"
                                    android:layout_width="@dimen/_18sdp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/folder_icon"
                                    />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    >

                                    <TextView
                                        android:id="@+id/tv_content_knowledge"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|start"
                                        android:text="1000\nContents"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_9sdp"
                                        />

                                </LinearLayout>


                            </LinearLayout>


                            <FrameLayout
                                android:layout_gravity="bottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:text="Knowledge Hub"
                                    android:layout_gravity="start|bottom"
                                    android:textStyle="bold"
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/white"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/_10sdp"/>

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_marginStart="@dimen/_15sdp"
                                    android:layout_marginTop="@dimen/_15sdp"
                                    android:layout_marginBottom="@dimen/_10sdp"
                                    android:layout_gravity="start|bottom"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone">

                                    <ImageView
                                        android:layout_gravity="center"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:src="@drawable/count_play_icon">

                                    </ImageView>

                                    <TextView
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:text="1000"
                                        android:layout_gravity="center"
                                        android:textStyle="bold"
                                        android:textSize="@dimen/_12sdp"
                                        android:textColor="@color/white"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        />
                                </LinearLayout>

                            </FrameLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_132sdp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_frag_search_mylearning_root"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:elevation="@dimen/_10sdp"
                        android:defaultFocusHighlightEnabled="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/my_performancebg_n"
                            />

                        <FrameLayout
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginStart="@dimen/_15sdp"
                                android:text="My\nPerformance"
                                android:layout_gravity="start|bottom"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_10sdp"/>

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_lms_leaderboard"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_132sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        android:elevation="@dimen/_10sdp"
                        android:defaultFocusHighlightEnabled="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_135sdp"
                            android:scaleType="fitXY"
                            android:src="@drawable/leaderboardbg_n"
                            />

                        <FrameLayout
                            android:layout_gravity="bottom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginStart="@dimen/_15sdp"
                                android:text="Leaderboard"
                                android:layout_gravity="start|bottom"
                                android:textStyle="bold"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_10sdp"/>

                        </FrameLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/idRVPhotos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                />


        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/include_bottom_tablayoutlms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible" />

